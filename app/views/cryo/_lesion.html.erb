<div class="row">
        <form>
              <legend>Lesion</legend>
              <button type="submit" class="btn btn-primary btn-sm">Add new</button>
            <p></p>
            
            <div class="form-group">
                  <fieldset>
                      <label for="gender-select">Malignant?</label>
                      <select class="malignant-select">
                          <option value="1">Yes</option>
                          <option value="2">No</option>
                      </select>
                  </fieldset>
            </div>
            
            <div class="form-group">
                  <fieldset>
                      <label for="workingd-select">Working diagnosis</label>
                      <select class="workingd-select">
                          <option value="1">Venous malformation</option>
                          <option value="2">Lymphatic malformation</option>
                          <option value="3">Vascular anomaly/overgrowth</option>
                          <option value="3">Fibroadipose vascular anomaly FAVA</option>
                      </select>
                  </fieldset>
            </div>
            
            <div class="form-group">
                  <fieldset>
                      <label for="workingd-select">Location</label>
                      <select class="location-select">
                          <option value="1">Head and neck</option>
                          <option value="2">Extremity upper (or upper limb)</option>
                          <option value="3">Extremity lower (or lower limb)</option>
                          <option value="3">Chest</option>
                      </select>
                  </fieldset>
            </div>
            
            <div class="form-group">
              <div class="form-group">
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text">No of lesions</span>
                  </div>
                  <input type="text" class="form-control" aria-label="No of lesions">
                </div>
              </div>
            </div>
            
            <div class="form-group">
                  <fieldset>
                      <label for="biopsy-select">Biopsy done?</label>
                      <select class="biopsy-select">
                          <option value="1">Yes</option>
                          <option value="2">No</option>
                      </select>
                  </fieldset>
            </div>
            
            <div class="form-group">
              <label for="exampleSelect2">Tissue type (multiple select)</label>
              <select multiple="" class="form-control" id="exampleSelect2">
                <option>Soft tissue</option>
                <option>Fat/connective tissue</option>
                <option>Muscle</option>
                <option>Bone</option>
                <option>Liver</option>
              </select>
            </div>
                  
        </form>
</div>